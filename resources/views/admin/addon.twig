{% extends "theme::layouts/default" %}

{% block content %}
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-6">
                {% include "module::admin/partials/controls" with {'json': json} %}

                <div class="panel">
                    {% include "module::admin/partials/authors" with {'json': json} %}
                    {% include "module::admin/partials/support" with {'json': json} %}
                </div>
            </div>

            <div class="col-lg-18">

                <div role="tabpanel">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="active">
                            <a href="#readme" data-toggle="tab">About</a>
                        </li>
                        <li>
                            <a href="#license" data-toggle="tab">License</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane active" id="readme">
                            {{ readme|markdown }}
                        </div>
                        <div class="tab-pane" id="license">
                            {{ license|markdown }}
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
{% endblock %}